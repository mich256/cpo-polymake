script:

load('alcoved.sage')

pi = DecoratedPermutation([3,1,6,5,2,4],[0]*6)
G = DP_to_GN(pi)
P = Positroid(G)
trueP = P.projected_polytope

load('hstar.sage')
trueP.h_star_vector()

R = RootSystem(['B',3])
space = R.root_lattice()
sr = space.simple_roots()
theta = space.highest_root()
boundaries = {sr[3]:[0,1], sr[1]+sr[3]: [1,2], sr[1]+sr[2]: [0,1], theta: [2,3]}
alcove1 = AlcovedPolytope(R, boundaries)